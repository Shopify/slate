{% if settings.type_header_family contains 'Google' %}
  {% assign type_header_parts = settings.type_header_family | split: '_' %}
{% else %}
  {% assign header_family = settings.type_header_family %}
{% endif %}

<style>
  :root {
    --headings_color: {{ settings.headings_color }};
    --body_color: {{ settings.body_color }};
    --body_color_dark: {{ settings.body_color | color_darken: 15 }};
    --footer_color: {{ settings.footer_color }};
    --button_background_color: {{ settings.button_background_color }};
    --color_button_text: {{ settings.color_button_text }};
    --color_main_bg: {{ settings.color_main_bg }};
    --header_family: {{ header_family }};
    --letter_spacing: {{ settings.letter_spacing }}px;
    --font-body-bold-weight: {{ font_body_bold.weight | default: "bold" }};
  }
</style>
